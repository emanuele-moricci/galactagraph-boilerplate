    "chalk": "^4.1.2",
    "cli": "^1.0.0",
    "concurrently": "^6.3.0",
    "dotenv-cli": "^4.0.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.1",
    "federation-utils": "./bin/federation-utils/federation-utils-v1.0.30.tgz",
    "graphql": "^15.7.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-middleware": "^6.1.10",
    "graphql-query-complexity": "^0.11.0",
