{
  "name": "galactagraph-gateway",
  "version": "1.0.0",
  "description": "GalactaGraph - The easiest and fastest way to build your world-dominating API Federation",
  "main": "gateway.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/emanuele-moricci/galactagraph-boilerplate.git"
  },
  "author": "Emanuele Moricci <emanuele.moricci@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/gateway.js",
    "format": "npx prettier --config .prettierrc --write . & npx eslint --config .eslintrc.js --fix .",
    "docker:up": "docker-compose up -d --build && ./bin/federation-bash/prepare-federation-docker.sh",
    "docker:down": "docker compose down",
    "federation:dev": "./bin/federation-bash/start-federation-dev.sh",
    "federation:test": "./bin/federation-bash/start-federation-test.sh",
    "federation:publish": "./bin/federation-bash/publish-federation.sh"
  },
  "lint-staged": {
    "*": [
      "yarn format",
      "git add ."
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@types/dotenv-safe": "^8.1.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.15",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.7",
    "plop": "^2.7.6",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@apollo/gateway": "^0.42.3",
    "@graphql-codegen/core": "^1.17.10",
    "@graphql-codegen/plugin-helpers": "^1.18.7",
