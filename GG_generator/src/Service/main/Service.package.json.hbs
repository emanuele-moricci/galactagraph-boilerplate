{
  "name": "{{ parsedServiceName }}",
  "version": "1.0.0",
  "description": "{{ ServiceDescription }}",
  "main": "index.ts",
  "repository": "",
  "author": "Emanuele Moricci",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/index.js",
    "test": "yarn test:unit && yarn test:integration --forceExit",
    "test:prepare": "dotenv -e ./.env.test yarn generate:reset",
    "test:unit": "yarn test:prepare && dotenv -e ./.env.test jest unit",
    "test:integration": "yarn test:prepare && dotenv -e ./.env.test jest int -i",
    "test:watch": "yarn test:prepare && dotenv -e ./.env.test jest --watch",
    "test:coverage": "yarn test:prepare && dotenv -e ./.env.test jest --coverage",
    "apollo:update": "yarn generate && yarn publish:schema",
    "publish:schema": "rover subgraph publish {{ federationGraph }} --name {{ parsedServiceName }} --schema src/graphql/generated/schema.graphql --routing-url http://localhost:{{ ServicePort }}/graphql --convert",
    "publish:schema:docker": "rover subgraph publish {{ federationGraph }} --name {{ parsedServiceName }} --schema src/graphql/generated/schema.graphql --routing-url http://host.docker.internal:{{ ServicePort }}/graphql --convert",
    "generate": "graphql-codegen --config codegen.yml && rover subgraph introspect http://localhost:{{ ServicePort }}/graphql > ./src/graphql/generated/schema.graphql",
    "generate:migration": "npx prisma migrate dev",
    "generate:seed": "npx prisma db seed",
    "generate:reset": "npx prisma migrate reset --force"
  },
  "prisma": {
    "seed": "ts-node prisma/db/seeder.ts"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@types/dotenv-safe": "^8.1.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.15",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prisma": "^3.3.0",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@apollo/subgraph": "^0.1.2",
    "@graphql-codegen/core": "^1.17.10",
    "@graphql-codegen/plugin-helpers": "^1.18.7",
    "@graphql-tools/load-files": "^6.5.1",
    "@graphql-tools/merge": "^8.2.0",
    "@graphql-tools/schema": "^8.3.0",
    "@prisma/client": "^3.3.0",
    "apollo-graphql": "^0.9.3",
    "apollo-server": "^2.25.1",
    "apollo-server-express": "^2",
    "chalk": "^4.1.2",
    "dotenv-cli": "^4.0.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
